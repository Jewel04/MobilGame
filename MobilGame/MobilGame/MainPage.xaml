<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MobilGame"
             x:Class="MobilGame.MainPage"


    Title="jeu cool">
    <ContentPage.Content>
        
        <AbsoluteLayout>
            <Label Text="Bienvenue sur ... un jeu troooop bien :)"
                AbsoluteLayout.LayoutBounds="0.5,0.2, 0.7, 0.2" AbsoluteLayout.LayoutFlags="All"  />

            <Label Text="Qui joue ? :)"
                AbsoluteLayout.LayoutBounds="0.5,0.4, 0.3, 0.2" AbsoluteLayout.LayoutFlags="All"  />


            <Entry x:Name="name1" Placeholder="Username"  
            AbsoluteLayout.LayoutBounds="0.5,0.6, 0.3, 0.2" AbsoluteLayout.LayoutFlags="All"  />
            <Entry x:Name="name2" Placeholder="Username" 
            AbsoluteLayout.LayoutBounds="0.5,0.65, 0.3, 0.2" AbsoluteLayout.LayoutFlags="All"  />
            <Entry x:Name="name3" Placeholder="Username" 
            AbsoluteLayout.LayoutBounds="0.5,0.7, 0.3, 0.2" AbsoluteLayout.LayoutFlags="All"  />



            <Button x:Name="submit" Text="Save" BorderWidth="20" Clicked="Submit_Clicked"
            AbsoluteLayout.LayoutBounds="0.5,0.9, 0.3, 0.2" AbsoluteLayout.LayoutFlags="All"  />
        </AbsoluteLayout>


    </ContentPage.Content>

</ContentPage>
